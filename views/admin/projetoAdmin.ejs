<%- include('../partials/header.ejs') %>

    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        .container {
            display: flex;
            justify-content: center;
        }

        .projeto {
            width: 80%;
            border: solid green 2px;
            padding: 25px;
            margin: 25px;
            display: flex;
            flex-direction: column;
        }

        .countedo {
            display: flex;
            flex-direction: column;
        }

        .tarefa {
            border: solid green 2px;
            width: 90%;
            margin: 20px;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        nav {
            background-color: black;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px;
        }

        nav li {
            list-style: none;
            font-size: 1.3rem;
        }

        nav li a {
            text-decoration: none;
            color: white;
        }
    </style>



    <body>
        <%- include('../partials/navbar.ejs') %>
            <div class="container">
                <div class="projeto">
                    <h2>Nome do Projeto: <%= projeto.nome %>
                    </h2>
                    <div class="conteudo">
                        <h3 style="display: inline-block;">Descrição:</h3>
                        <p style="display: inline-block;">
                            <%= projeto.descricao %>
                        </p>
                        <h3>Últimas Tarefas completas:</h3>
                        <% tarefas.forEach(tarefa=> { %>
                            <div style="display: flex; justify-content: center;">
                                <div class="tarefa">
                                    <h3>Nome da tarefa: <span style="font-weight: 300;"><%= tarefa.nome %></span>
                                    </h3>
                                    <div  style="display: inline-block;">
                                        <h3  style="display: inline-block;">Relatório:</h3>
                                        <p   style="display: inline-block;">
                                            <%= tarefa.relatorio %>
                                        </p>
                                    </div>
                                    <h3>Horário de entrada: <span style="font-weight: 300;"><%= tarefa.horaEntrada %></span> </h3>
                                    <h3>Horário de saída: <span style="font-weight: 300;">
                                            <%= tarefa.horaSaida %>
                                        </span></h3>
                                    <h3>Ano da criação: <span style="font-weight: 300;"><%= tarefa.ano %></span> </h3>
                                        <p>Criador da tarefa:<%= tarefa.usuario.nome %></p>
                                </div>
                            </div>
                            <% }); %>
                                <p>Admin criador do projeto: <%= projeto.usuario.nome %>
                                </p>
                    </div>
                </div>
            </div>

    </body>

    </html>
    <%- include('../partials/footer.ejs') %>