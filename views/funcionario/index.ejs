<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Página de funcionarios</title>
</head>

<body>

    <% if (admin==0) {%>

        <h1 style="text-align: center;">Projetos</h1>

        <% projetos.forEach(projeto=> { %>
            <div class="container">
                <div class="projeto">
                    <h1> <%= projeto.nome %></h1>
                    <h3><a href="/projeto/<%= projeto.id %>">Trabalhar</a></h3>
                 </div>
            </div>
            <% }); %>

                <%} else{%>
                    <h1>Você não tem acesso a essa rota, você é um admin</h1>
                    <% } %>

</body>

</html>